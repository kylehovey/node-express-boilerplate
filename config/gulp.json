{
  "tasks" : {
    "compileJS" : [
      {
        "name" : "app-JS",
        "src" : "./src/js/**/*.js",
        "dest" : "./public/js/app",
        "enabled" : true
      }
    ],
    "compileCSS" : [
      {
        "name" : "app-CSS",
        "src" : "./src/sass/**/*.scss",
        "dest" : "./public/style",
        "enabled" : true
      }
    ],
    "lintClient" : [
      {
        "name" : "app-ESLint",
        "src" : "./src/**/*.js",
        "enabled" : true
      }
    ],
    "lintNode" : [
      {
        "name" : "node-ESLint",
        "src" : [
          "./**/*.js",
          "!./node_modules/**",
          "!./public/**",
          "!./src/**/*.js"
        ],
        "enabled" : true
      }
    ]
  }
}
